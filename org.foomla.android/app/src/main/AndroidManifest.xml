<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.foomla.androidapp">


    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".FoomlaApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/foomla_logo"
        android:theme="@style/Theme.FoomlaTheme">

        <activity
            android:name=".activities.splash.SplashScreenActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.FoomlaTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.main.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.edittraining.EditTrainingActivity"
            android:label="@string/activity_edit_training">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.exercisebrowser.ExerciseBrowserActivity"
            android:label="@string/activity_exercise_browser">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.mytrainings.MyTrainingsActivity"
            android:label="@string/activity_my_trainings">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.exercisedetail.ExerciseDetailActivity"
            android:label="@string/activity_exercisedetails"
            android:theme="@style/Theme.FoomlaDarkTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.trainingdetail.TrainingDetailActivity"
            android:label="@string/activity_trainingdetails">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.info.InfoActivity"
            android:label="@string/activity_info">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

    </application>

</manifest>

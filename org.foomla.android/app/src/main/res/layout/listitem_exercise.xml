<?xml version="1.0" encoding="utf-8"?><FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:foomla="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/exerciseContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/white_box_selector"
        android:clickable="true"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="5dp"
            android:background="@color/fooblack"
            android:contentDescription="@string/exercise_image_content_desc" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@color/fooblack"
            android:textSize="@dimen/text_normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:layout_marginTop="15dp"
        android:background="#EEEEEE"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/focus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="focus"
            android:textColor="@color/darkgrey"
            android:textSize="@dimen/text_small" />

        <FrameLayout
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/foogreen" >
        </FrameLayout>
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/marker_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:layout_marginTop="45dp"
        android:background="#EEEEEE"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/marker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="focus"
            android:textColor="@color/darkgrey"
            android:textSize="@dimen/text_small" />

        <FrameLayout
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/foogreen" >
        </FrameLayout>
        
    </LinearLayout>
 

</FrameLayout>